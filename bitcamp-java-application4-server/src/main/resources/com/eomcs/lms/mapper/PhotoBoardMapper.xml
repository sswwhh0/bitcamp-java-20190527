<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PhotoBoardDao">
<!-- Mybatis가 컬럼값을 객체에 담을 때 컬럼 이름으로 셋터를 찾아 호출한다. -->
  <!--
  <select id="findAll" resultType="com.eomcs.lms.domain.Board">
    select board_id,
    board_conts,
    cdt,
    vw_cnt 
    from lms_board order by board_id desc
  </select> 
  -->
  
  <!-- 만약 컬럼에 별명이 있다면 셋터를 호출할 때도 그 별명과 일치하는 셋터를 호출한다.
              컬럼의 이름과 셋터의 이름이 다르다면 다음과 같이 셋터 이름과 같은  이름으로
              컬럼에 별명을 부여하라! 그래야만 컬럼의 값을 객체에 제대로 담을 수 있다. -->
	<select id="findAll" resultType="com.eomcs.lms.domain.PhotoBoard">
		select 
		photo_id as no,
		titl as title,
		cdt as createdDate,
		vw_cnt as viewCount,
		lesson_id as lessonNo
		from lms_photo order by photo_id desc
	</select>
	<select id="findBy" parameterType="int"
		resultType="com.eomcs.lms.domain.PhotoBoard">
		select 
    photo_id as no,
    titl as title,
    cdt as createdDate,
    vw_cnt as viewCount,
    lesson_id as lessonNo
		from lms_photo where photo_id =#{haha}
	</select>
	
	<update id="increaseViewCount" parameterType="int">
    update lms_photo
    set
    vw_cnt = vw_cnt+1
    where photo_id=#{value}
  </update>

	<insert id="insert" parameterType="com.eomcs.lms.domain.PhotoBoard"
	useGeneratedKeys="true" keyColumn="photo_id" keyProperty="no">
	insert into lms_photo(lesson_id, titl)
	values(#{lessonNo},#{title})
	</insert>

	<update id="update" parameterType="com.eomcs.lms.domain.PhotoBoard">
		update lms_photo set titl=#{titl}
		where photo_id=#{no}
	</update>
	
	<delete id="delete" parameterType="com.eomcs.lms.domain.PhotoBoard">
	delete from lms_photo where photo_id=#{no}
	</delete>
	
</mapper>