<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PhotoBoardDao">
<resultMap type="PhotoBoard" id="PhotoBoardMap">
<id column="photo_id" property="no"/>
<result column="titl" property="title"/>
<result column="cdt" property="createdDate"/>
<result column="vw_cnt" property="viewCount"/>
<result column="lesson_id" property="lessonNo"/>
</resultMap>
<!-- Mybatis가 컬럼값을 객체에 담을 때 컬럼 이름으로 셋터를 찾아 호출한다. -->
  <!--
  <select id="findAll" resultType="Board">
    select board_id,
    board_conts,
    cdt,
    vw_cnt 
    from lms_board order by board_id desc
  </select> 
  -->
  
  <!-- 만약 컬럼에 별명이 있다면 셋터를 호출할 때도 그 별명과 일치하는 셋터를 호출한다.
              컬럼의 이름과 셋터의 이름이 다르다면 다음과 같이 셋터 이름과 같은  이름으로
              컬럼에 별명을 부여하라! 그래야만 컬럼의 값을 객체에 제대로 담을 수 있다. -->
	<select id="findAll" resultMap="PhotoBoardMap">
		select 
		photo_id,
		titl,
		cdt,
		vw_cnt,
		lesson_id
		from lms_photo order by photo_id desc
	</select>
	<select id="findBy" parameterType="int"
		resultMap="PhotoBoardMap">
		select 
    photo_id,
    titl,
    cdt,
    vw_cnt,
    lesson_id
		from lms_photo where photo_id =#{haha}
	</select>
	
	<update id="increaseViewCount" parameterType="int">
    update lms_photo
    set
    vw_cnt = vw_cnt+1
    where photo_id=#{value}
  </update>

	<insert id="insert" parameterType="PhotoBoard"
	useGeneratedKeys="true" keyColumn="photo_id" keyProperty="no">
	insert into lms_photo(lesson_id, titl)
	values(#{lessonNo},#{title})
	</insert>

	<update id="update" parameterType="PhotoBoard">
		update lms_photo set titl=#{titl}
		where photo_id=#{no}
	</update>
	
	<delete id="delete" parameterType="PhotoBoard">
	delete from lms_photo where photo_id=#{no}
	</delete>
	
</mapper>